<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_clancy_airdrop_form" model="ir.ui.view">
        <field name="name">clancy.airdrop.form</field>
        <field name="model">clancy.airdrop</field>
        <field name="arch" type="xml">
            <form string="Clancy AirDrop">
                <header>
                    <button name="action_validate" type="object" string="Validate" states="draft" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel" states="draft" class="oe_link"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="assigned_product_id"/>
                        <field name="publishing_date"/>
                        <field name="state" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    </data>
</odoo>