<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_clancy_airdrop_wizard" model="ir.ui.view">
        <field name="name">Clancy AirDrop Wizard</field>
        <field name="model">clancy.airdrop.wizard</field>
        <field name="arch" type="xml">
            <form string="Clancy AirDrop Wizard" name="clancy.airdrop.wizard" type="form">
                <group>
                    <field name="name"/>
                    <field name="selection_criteria"/>
                    <field name="assigned_product_id" domain="[('type', '=', 'product')]"/>
                    <field name="publishing_date"/>
                </group>
                <footer>
                    <button name="action_create_airdrop" string="Create AirDrop" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>