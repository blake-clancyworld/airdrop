<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action to display the list of airdrops -->
        <record id="action_clancy_airdrop_list" model="ir.actions.act_window">
            <field name="name">Clancy AirDrop List</field>
            <field name="res_model">clancy.airdrop</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_clancy_airdrop_search"/>
        </record>

        <!-- Action to display the wizard to create a new airdrop -->
        <record id="action_clancy_airdrop_create" model="ir.actions.act_window">
            <field name="name">Create Clancy AirDrop</field>
            <field name="res_model">clancy.airdrop.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>